<?xml version="1.0" encoding="UTF-8"?>
<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">

    <!-- defines the layout master -->
    <fo:layout-master-set>
        <fo:simple-page-master master-name="first"
                               page-height="29.7cm" page-width="21cm"
                               margin-top="11mm" margin-left="11mm" margin-right="11mm" margin-bottom="11mm">
            <fo:region-body region-name="body" margin-top="3cm" margin-bottom="3cm"/>
            <fo:region-before region-name="before" extent="27.5mm"/>
            <fo:region-after region-name="after" extent="27.5mm"/>
        </fo:simple-page-master>
    </fo:layout-master-set>

    <!-- starts actual layout -->
    <fo:page-sequence master-reference="first">
        <fo:static-content flow-name="before">
            <fo:block-container absolute-position="absolute" top="-.5mm" right="-5.5mm" width="69.1mm">
                <fo:block>
                    <fo:external-graphic src="pdLogo.png" content-width="6.91cm" content-height="2.79cm"/>
                </fo:block>
            </fo:block-container>
            <fo:block-container absolute-position="absolute" top="4mm" left="1mm"
                                font-family="corporate" font-size="9pt" line-height="5mm">
                <fo:table>
                    <fo:table-column column-number="1" column-width="45.5mm"/>
                    <fo:table-column column-number="2" column-width="5mm"/>
                    <fo:table-body>
                        <fo:table-row>
                            <fo:table-cell column-number="1">
                                <fo:block>Vertraulich | Confidenziale</fo:block>
                            </fo:table-cell>
                            <fo:table-cell column-number="2">
                                <fo:block font-family="material">&#59444;</fo:block>
                            </fo:table-cell>
                        </fo:table-row>
                        <fo:table-row>
                            <fo:table-cell column-number="1" text-align="left">
                                <fo:block>Reserviert | Riservato</fo:block>
                            </fo:table-cell>
                            <fo:table-cell column-number="2">
                                <fo:block font-family="material">&#59445;</fo:block>
                            </fo:table-cell>
                        </fo:table-row>
                        <fo:table-row>
                            <fo:table-cell column-number="1">
                                <fo:block>Intern | Interno</fo:block>
                            </fo:table-cell>
                            <fo:table-cell column-number="2">
                                <fo:block font-family="material">&#59445;</fo:block>
                            </fo:table-cell>
                        </fo:table-row>
                        <fo:table-row>
                            <fo:table-cell column-number="1">
                                <fo:block>Ã–ffentlich | Pubblico</fo:block>
                            </fo:table-cell>
                            <fo:table-cell column-number="2">
                                <fo:block font-family="material">&#59445;</fo:block>
                            </fo:table-cell>
                        </fo:table-row>
                    </fo:table-body>
                </fo:table>
            </fo:block-container>

            <fo:block-container absolute-position="absolute" top="27mm"
                                border-bottom="solid 0.5px #000000">
                <fo:block></fo:block>
            </fo:block-container>
        </fo:static-content>

        <fo:static-content flow-name="after">
            <fo:block-container absolute-position="absolute" left="-40mm" top="-30mm">
                <fo:block>
                    <fo:external-graphic src="pdIcon.png" content-width="8.88cm" content-height="8.28cm"/>
                </fo:block>
            </fo:block-container>
            <fo:block-container absolute-position="absolute" top="2mm"
                                font-family="corporate" font-size="9pt" line-height="4mm">
                <fo:block text-align="center">
                    <fo:inline font-weight="bold">Company Name</fo:inline>
                    | Address | Web | E-Mail
                </fo:block>
                <fo:block text-align="center">
                    Impressum
                </fo:block>
                <fo:block text-align="center">
                    Information
                </fo:block>
            </fo:block-container>
            <fo:block-container absolute-position="absolute" top="18mm" left="4mm"
                                font-family="CorporateS" font-size="9pt" line-height="4mm">
                <fo:table>
                    <fo:table-column column-number="1" column-width="90mm"/>
                    <fo:table-column column-number="2" column-width="90mm"/>
                    <fo:table-body>
                        <fo:table-row>
                            <fo:table-cell column-number="1" text-align="left">
                                <fo:block font-weight="bold">Version|e: YEAR.XX</fo:block>
                            </fo:table-cell>
                            <fo:table-cell column-number="2" text-align="right">
                                <fo:block font-weight="bold">Seite | Pagina 1 | 1</fo:block>
                            </fo:table-cell>
                        </fo:table-row>
                    </fo:table-body>
                </fo:table>
            </fo:block-container>
        </fo:static-content>

        <fo:flow flow-name="body">
            <fo:block font-family="Helvetica" font-size="14pt">
                Helvetica
            </fo:block>

            <fo:block font-family="Helvetica" font-size="12pt">
                Some special characters:
            </fo:block>
            <fo:block space-after.optimum="10pt" font-family="Helvetica">
                Euro ( dec 8364, hex 20AC): &#8364;
            </fo:block>
            <fo:block space-after.optimum="10pt" font-family="Helvetica" text-align="justify">
